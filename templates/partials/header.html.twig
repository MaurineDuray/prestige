            <li><a href="{{path("homepage")}}#footer">Contact</a></li>
        </ul>
    </div>


    <div class="accountBlock">
        {% if app.user %}
            <p>Bienvenue <b>{{app.user.lastname}}-{{app.user.firstname}}</b>,</p>
            <ul>
                <li><a href="{{path('profile')}}">Mon espace compte</a></li>
                <li><a href="{{path('members')}}">Nos membres</a></li>
                <li><a href="{{path('agenda')}}">Agenda</a></li>
                {% if app.user.roles[0] == "ROLE_ADMIN" %}
                <li><a href="{{path('admin')}}">Administration</a></li>
                {% endif %}
                <li><a href="{{path('account_logout')}}">Déconnexion</a></li>
            </ul>
        {% else %}
           
        <ul>
            <li><a href="{{path('account_login')}}">Connexion</a></li>   
        </ul>
        {% endif %}
        
    </div>
